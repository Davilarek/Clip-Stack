<transition xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <ripple
            android:color="?android:colorControlHighlight">
            <item>
                <shape android:shape="oval">
                    <solid
                        android:id="@+id/fab_color"
                        android:color="@color/fab"
                        tools:ignore="DuplicateIds" />
                </shape>
            </item>
        </ripple>
    </item>

    <item>
        <ripple
            android:color="?android:colorControlHighlight">
            <item>
                <shape android:shape="oval">
                    <solid
                        android:id="@+id/fab_color"
                        android:color="@color/fab_starred"
                        tools:ignore="DuplicateIds" />
                </shape>
            </item>
        </ripple>
    </item>
</transition>